<div class="center">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <div>
    おきにいり <strong><%= @user.favorite_photos.count %></strong>まい
  </div>
  <div>
    <% if current_user == @user %>
      <%= link_to "プロフィール変更" , edit_user_path, class: "btn btn-success" if logged_in? %>
    <% end %>
  </div>
  <%= render 'photos/list', photos: @photos %>
</div>